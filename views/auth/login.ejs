<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/auth.css">
    <link rel="stylesheet" href="/css/forms.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

            <main>
                <% if (errorMessage) { %>
                    <div class="user-message user-message__error">
                        <%= errorMessage %>
                    </div>
                    <% } %>
                        <form class="login-form" action="/login-form" method="post" novalidate>
                            <div class="form-control">
                                <label for="email">Email: </label>
                                <input class="<%=validation.find(e=> e.path === 'email') ? 'invalid' : '' %>"
                                    type="email" name="email" id="email" value=<%=oldMessage.email %> >
                            </div>
                            <div class="form-control">
                                <label for="password">Password: </label>
                                <input
                                    class="<%=validation.find(e=> (e.path === 'password' || e.path === 'email')) ? 'invalid' : '' %>"
                                    type="password" name="password" id="password" value=<%=oldMessage.password%>>
                            </div>
                            <div>
                                <input type="hidden" name="_csrf" value=<%=csrfToken %> />
                                <button class="btn" type="submit">Login</button>
                            </div>
                        </form>
                        <div class="centered">
                            <a href="/reset">Reset Password</a>
                        </div>
            </main>
            <%- include('../includes/end.ejs') %>